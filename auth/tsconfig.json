{
  "compilerOptions": {
    "target": "ES2020",
    "lib": [
      "ESnext",
      "es5",
      "es6",
      "dom"
    ],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "checkJs": false,
    "outDir": "./dist",
    "module": "commonjs",
    "jsx": "react",
    "resolveJsonModule": true,
    "baseUrl": "./",
    "strict": true,
    "strictPropertyInitialization": false,
    "useDefineForClassFields": true,
    "paths": {
      "@src/*": [
        "src/*"
      ]
    },
    "plugins": [
      {
        "transform": "typescript-transform-paths"
      }
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "**/*.test.js",
    "**/*.js"
  ]
}